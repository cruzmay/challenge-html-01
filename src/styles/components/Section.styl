section 
    padding-top 60px
    width 90vw
    display grid
    margin 0 auto
    max-width 1170px
    grid-template-columns repeat(auto-fit, minmax(280px, 1fr))
    grid-template-rows start
    align-content start
    grid-column-gap 1.5rem
    grid-row-gap 2rem
article
    position relative
article img
    padding 1em
    display block
    height auto
    object-fit contain
    width 100%
    min-height 12rem
article div
    padding 10px 20px
    font-family 'Oswald', sans-serif;
    background #ff565b
    color white
    position: absolute
    top: 100px